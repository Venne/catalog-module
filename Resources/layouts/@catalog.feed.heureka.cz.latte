{contentType application/xml}
<?xml version="1.0" encoding="UTF-8"?>
<SHOP>
	{foreach $productRepository->findAll() as $entity}
	<SHOPITEM>
		<ITEM_ID>{$entity->id}</ITEM_ID>
		<PRODUCTNAME>{$entity->name}</PRODUCTNAME>
		<PRODUCT>{$entity->name}</PRODUCT>
		<DESCRIPTION>{$entity->route->notation}</DESCRIPTION>
		<URL>{link Route route=>$entity->route}</URL>
		{if $entity->route->photo}<IMGURL>{$server}{$entity->route->photo->getFileUrl()}</IMGURL>{/if}
		<PRICE_VAT>{$entity->price}</PRICE_VAT>
	</SHOPITEM>
	{/foreach}
</SHOP>
